    "version": "0.2.0",
    "configurations": [
        {
            "name": "dev-debug",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_RUN_PORT": "5001",
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run"
            ],
        },
        {
            "name": "prod-debug",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_RUN_PORT": "5000",
                "FLASK_APP": "run.py",
                "FLASK_ENV": "production",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run"
            ],
        }
    ]
}